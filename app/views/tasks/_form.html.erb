<div class="card">
  <div class="card-body">
    <%= form_with(model: task, class: "space-y-4") do |form| %>
      <% if task.errors.any? %>
        <div class="alert alert-error">
          <p><strong>Popraw poniższe błędy:</strong></p>
          <ul class="list-disc list-inside">
            <% task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :title, "Tytuł", class: "block text-sm font-medium mb-1" %>
        <%= form.text_field :title, class: "w-full rounded-xl border border-gray-300 bg-white px-3 py-2" %>
      </div>

      <div>
        <%= form.label :description, "Opis", class: "block text-sm font-medium mb-1" %>
        <%= form.text_area :description, rows: 5, class: "w-full rounded-xl border border-gray-300 bg-white px-3 py-2" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :due_date, "Termin", class: "block text-sm font-medium mb-1" %>
          <%= form.date_field :due_date, class: "w-full rounded-xl border border-gray-300 bg-white px-3 py-2" %>
        </div>
        <div class="flex items-center gap-2 md:mt-7">
          <%= form.check_box :completed, class: "rounded border border-gray-300" %>
          <%= form.label :completed, "Wykonane" %>
        </div>
      </div>

      <div class="pt-2 flex gap-2">
        <%= form.submit "Zapisz", class: "btn btn-primary" %>
        <%= link_to "Anuluj", tasks_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
